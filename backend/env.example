# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_SSL=true
SQLITE_STORAGE=database.sqlite

# Server Configuration
PORT=5000
NODE_ENV=development
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis Configuration (Optional - for queues and distributed cache)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
ENABLE_LOGGING=true
LOG_LEVEL=info

# OAUTH2 REDIRECT URIs
# Google/Twitch (via Supabase): Add to Supabase Dashboard > Authentication > URL Configuration
# - http://localhost:3000/auth/callback (local)
# - https://your-domain.com/auth/callback (production)

# Discord: Add to Discord Developer Portal > OAuth2 > Redirects
# - http://localhost:5000/api/user/auth/discord/callback
# - http://localhost:5000/api/user/auth/discord/link/callback
# - https://your-backend-domain.com/api/user/auth/discord/callback (production)
# - https://your-backend-domain.com/api/user/auth/discord/link/callback (production)

# Twitter (X) login - two options:
#
# OPCIÓN 1 — Supabase (Twitter deprecated or X OAuth 2.0 in Dashboard):
#   Do NOT set TWITTER_OAUTH2_* below. Configure in Supabase Dashboard only:
#   Authentication > Providers > X / Twitter (OAuth 2.0) or Twitter (Deprecated).
#   Callback URL in X app: https://<PROJECT_REF>.supabase.co/auth/v1/callback
#
# OPCIÓN 2 — OAuth propio (backend, producción):
#   Set the vars below. In X Developer Portal (developer.x.com):
#   1. Your App > "Keys and tokens" (or "Settings" > OAuth 2.0) — copy "Client ID" and "Client Secret".
#   2. "Authentication settings" > "Callback URI / Redirect URL" must include (exact match):
#      - http://localhost:5000/api/user/auth/twitter/callback
#      - http://localhost:5000/api/user/auth/twitter/link/callback
#      - https://YOUR-BACKEND-URL/api/user/auth/twitter/callback (production)
#      - https://YOUR-BACKEND-URL/api/user/auth/twitter/link/callback (production)
#   3. "Type of App": Web App, Automated App or Bot (Confidential client) to get Client Secret.
#   Paste the values below and restart the backend.
#   If you see "Could not get access token": check BACKEND_URL has no trailing slash,
#   and that the callback URLs in X Developer Portal match exactly (including /api/user/auth/twitter/...).
TWITTER_OAUTH2_CLIENT_ID=
TWITTER_OAUTH2_CLIENT_SECRET=
